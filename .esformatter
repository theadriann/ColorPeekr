{
    "preset": "default",
    "root": true,
    "ignore-selection": false,
    "indent": {
        "value": "    ",
        "SwitchStatement": 0
    },
    "lineBreak": {
        "before": {
            "ArrayExpressionClosing": 1,
            "ElseIfStatement" : 1,
            "ElseStatement" : 1
        },
        "after": {
            "ArrayExpressionOpening": 1,
            "ArrayExpressionComma": 1
        }
    },
    "whiteSpace": {
        "before": {
            "ArrayExpressionClosing" : 1,
            "ArrayPatternClosing": 1,
            "ObjectExpressionClosingBrace": 1,
            "PropertyName": 1
        },
        "after": {
            "ArrayExpressionOpening" : 1,
            "ArrayPatternOpening": 1,
            "ObjectExpressionOpeningBrace": 1
        }
    },
    "plugins": [
        "esformatter-align",
        "esformatter-asi",
        "esformatter-braces",
        "esformatter-collapse-objects",
        "esformatter-dot-notation",
        "esformatter-jsx",
        "esformatter-limit-linebreaks",
        "esformatter-literal-notation",
        "esformatter-parseint",
        "esformatter-quotes",
        "esformatter-remove-trailing-commas",
        "esformatter-spaced-lined-comment",
        "esformatter-flow",
        "esformatter-quote-props",
        "esformatter-var-each"
    ],
    // esformatter-collapse-objects
    "collapseObjects": {
        "ArrayExpression": {
            "maxKeys": -1,
            "maxLineLength": 100
        },
        "ObjectExpression": {
            "maxKeys": 2,
            "maxDepth": -1,
            "maxLineLength": 100
        }
    },
    // esformatter-jsx
    "jsx": {
        "alignWithFirstAttribute": false,
        "attrsOnSameLineAsTag": false,
        "firstAttributeOnSameLine": false,
        "formatJSXExpressions": false,
        "JSXExpressionsSingleLine": true,
        "spaceInJSXExpressionContainers": " ",
        "removeSpaceBeforeClosingJSX": false,
        "JSXAttributeQuotes": "double",
        "closingTagOnNewLine": true,
        "maxAttrsOnTag": 1,
        "htmlOptions": {
            "brace_style": "collapse",
            "indent_char": " ",
            "indent_size": 4,
            "preserve_newlines": true,
            "max_preserve_newlines": 2
        }
    },
    // esformatter-quotes
    "quotes": {
        "type": "single"
    }
}
