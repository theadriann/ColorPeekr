{
    "compilerOptions": {
        "allowJs": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "skipLibCheck": true,
        "esModuleInterop": false,
        "noImplicitAny": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "renderer/*": ["./src/renderer/*"],
            "third_party/*": ["./third_party/*"]
        }
    },
    "include": ["src/**/*"]
}
